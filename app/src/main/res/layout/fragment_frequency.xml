<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".ui.extras.FrequencyFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:tint="@color/white"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ImageView
        android:id="@+id/ivCalendar"
        android:src="@drawable/ic_calendar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tvAskFrequency"
        android:text="@string/ask_frequency"
        style="@style/Tittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvAskFrequency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFirstFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/first_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvFirstFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvSecondFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/second_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvFirstFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvSecondFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvThirdFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/third_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvSecondFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvThirdFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvFourthFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/third_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvThirdFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvFourthFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvFifthFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fourth_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvFourthFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvFifthFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvSixthFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sixth_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvFifthFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvSixthFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvSeventhFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/seventh_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvSixthFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvSeventhFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvEigthFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/eigth_frequency"
                style="@style/Body"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_next"
                app:layout_constraintTop_toBottomOf="@+id/tvSeventhFrequency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="8dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/tvEigthFrequency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>